@model LoginModel
@{ 
    Layout = "_LoginLayout";
}
<div class="container d-flex align-items-center" style="width:100vw;height:100vh">
    <div class="col-md-6 d-none d-sm-none d-md-block p-3 rounded">
        <object type="image/svg+xml" data="~/svg/Login.svg" class="img-fluid bg-dark h-100"></object>
    </div>
    <div class="col-12 col-sm-12 col-md-6 d-block border border-dark rounded p-4" id="left-div">
        <div class="display-3">Welcome Back.&#128522</div>
        <form action="" method="post" class="">
            <div class="row align-items-center justify-content-center flex-column h-100 p-3">
                <div class="form-group w-100 mb-3">
                    <label asp-for="Username"></label>
                    <input type="hidden" asp-for="ReturnUrl">
                    <br />
                    <input asp-for="Username" placeholder="Enter your name" class="form-control">
                </div>
                <div class="form-group w-100 mb-3">
                    <label asp-for="Password"></label>
                    <br />
                    <input type="password" asp-for="Password" placeholder="Enter your password" class="form-control">
                </div>
                <div class="form-group w-100 mb-3">
                    <label asp-for="RememberLogin">
                        <input asp-for="RememberLogin">
                        <strong>Remember Me</strong>
                    </label>
                </div>
                <button class="btn btn-lg btn-dark">Login</button>
            </div>
        </form>
    </div>
</div>