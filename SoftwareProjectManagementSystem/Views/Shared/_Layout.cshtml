<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- icon pack -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        function allowDrop(ev) {
            ev.preventDefault();
        }

        function drag(ev) {
            ev.dataTransfer.setData("text", ev.target.id);
        }

        function drop(ev, el) {
            ev.preventDefault();
            var data = ev.dataTransfer.getData("text");
            el.appendChild(document.getElementById(data));
        }
    </script>
</head>

<body class="d-flex">

    <!-- side navbar -->
    <nav class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark m-0" style="width: 280px; min-height: 100vh;"
         id="side">
        <div class="d-flex align-items-center w-100 justify-content-between">
            <span class="fs-4">Go To</span>
            <button class="btn" id="hide" onclick="navClick()">
                <i class="fs-1 bi bi-arrow-left-circle text-white"></i>
            </button>

        </div>
        <hr class="sticky-top">
        <ul class="nav nav-pills flex-column mb-auto sticky-top">
            <li class="nav-item">
                <a asp-controller="Admin" asp-action="Index" class="nav-link text-white" aria-current="page">
                    <i class="bi bi-house-door-fill"></i>
                    Home
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Dashboard" class="nav-link text-white">
                    <i class="bi bi-grid-3x3"></i>
                    Dashboard
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Kanban" class="nav-link text-white">
                    <i class="bi bi-clipboard-check"></i>
                    Kanban
                </a>
            </li>

        </ul>
        <hr>

    </nav>
    <div class="d-none btn mt-3 pt-2" id="expand" onclick="navClick()">
        <i class="fs-1 bi bi-arrow-right-circle text-dark mt-3"></i>
    </div>
    <!-- main -->
    <div class="w-100 m-0 p-0 pb-3">
        <div class="col-12">
            @RenderBody()
        </div>
    </div>
    <!-- scripts -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.10.2/dist/umd/popper.min.js"
            integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
            crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('.nav.nav-pills.flex-column.mb-auto.sticky-top').find('[href="' + window.location.pathname + '"]').addClass('active')
        });
        
        function navClick() {
            $(document).ready(function () {
                $("#expand").toggleClass("d-none")
                $("#side").toggleClass("d-none")
            });
        }
    </script>
</body>

</html>